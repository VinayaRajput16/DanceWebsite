extends base.pug


block scripts
  script.
      // Get the modal
      var modal = document.getElementById('id01');
      // When the user clicks anywhere outside of the modal, close it
      window.onclick = function(event) {
      if (event.target == modal) {
      modal.style.display = "none";
      }
      }

block style 
    style
      include ../static/style.css
      include ../static/styleAccount.css

block content 
      div.block
        h2 Create your Account
        
        form(action='/Account', style='border:1px solid #ccc', method="post")
          div.container
              h3 Sign Up
              p Please fill in this form to create an account.
              hr
              
              label(for='email')
                b Email
                input(type='text', placeholder='Enter Email', name='email', required='')

              label(for='danceForm')
                b Dance Form
                input(type='text', placeholder='Choose dance form', name='danceForm', required='')

              label(for='country')
                b Country
                input(type='text', placeholder='Choose your country', name='country', required='')

              label(for='psw')
                b Password
                input(type='password', placeholder='Enter Password', name='password', required='')

              label(for='psw-repeat')
                b Repeat Password
                input(type='password', placeholder='Repeat Password', name='passwordRepeat', required='')

              label
                input(type='checkbox', checked='checked', name='remember', style='margin-bottom:15px')
                | Remember me

              p
                | By creating an account, you agree to our 
                a(href='#', style='color:dodgerblue') Terms &amp; Privacy
                | .

              .clearfix
              button.cancelbtn(type='button') Cancel
              button.signupbtn(type='submit') Sign Up
